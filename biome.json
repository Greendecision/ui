{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "warn",
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn"
      },
      "complexity": {
        "noForEach": "off"
      },
      "a11y": {
        "useAltText": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off"
      },
      "style": {
        "useImportType": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": []
  },
  "files": {
    "ignore": ["src/aws-exports.js", "src/graphql/*", "src/API.ts"]
  }
}
